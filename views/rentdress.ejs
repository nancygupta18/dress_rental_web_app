<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Rental Detail Page</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f4f4f4;
      margin: 0;
      padding: 0;
    }
    .container {
      max-width: 700px;
      margin: 30px auto;
      background: #fff;
      padding: 25px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(216, 123, 123, 0.1);
    }
    h2 {
      text-align: center;
      margin-bottom: 20px;
    }
    label {
      display: block;
      margin-top: 15px;
      font-weight: bold;
    }
    input, select {
      width: 100%;
      padding: 10px;
      margin-top: 5px;
      border-radius: 6px;
      border: 1px solid #ccc;
    }
    .total {
      font-size: 18px;
      margin-top: 15px;
      font-weight: bold;
    }
    .payment-options {
      margin-top: 15px;
    }
    .online-options {
      margin-left: 20px;
      margin-top: 10px;
      display: none;
    }
    button {
      margin-top: 25px;
      padding: 12px;
      background: #b17f59;
      color: white;
      border: none;
      border-radius: 6px;
      font-size: 16px;
      cursor: pointer;
    }
    button:hover {
      background: #4d1f00;
    }
  </style>
</head>
<body>

<div class="container">
  <h2>Rent This Dress</h2>

  <form id="rentalForm" action="/rentdress" method="POST">

    <% if (locals.dress_id){ %>
      <input type="hidden" value="<%= dress_id %>" name="dress_id">
    <% } %>
    <label>Full Name</label>
    <input type="text" id="name" name="name" required>

    <label>Phone Number</label>
    <input type="tel" id="phone" name="phone" required>
   
    <label>Address</label>
    <input type="text" id="address" name="address" required>

    <label>Pincode</label>
    <input type="text" id="pincode" placeholder="Enter Pincode" name="pincode" required>

    <label>City</label>
    <input type="text" id="city" placeholder="Enter city" name="city" required>

    <label>Alternate Number</label>
    <input type="tel" id="altPhone" placeholder="Enter Alternate Number" name="alt_phone" >

    <label>Delivery Date</label>
    <input type="date" id="deliveryDate" onchange="validateDates()" name="d_date" required>

    <label>Return Date</label>
    <input type="date" id="returnDate" onchange="validateDates()" name="r_date" required>

    <label>Number of Days</label>
    <input type="number" id="days" name="no_of_days" readonly>

    <label><input type="checkbox" id="urgent" onchange="calculateAmount()"> Urgent Delivery (+₹199)</label>
   
    <div class="total">Amount: ₹<span id="amount"><%= locals.amount %></span></div>
     <input type="hidden" name="amount" value="<%= locals.amount %>">
    <div class="payment-options">
      <label>Payment Method</label>
      <label><input type="radio" name="payment_method" value="cash-on-delivery" checked onclick="togglePayment()"> Cash on Delivery</label>
      <label><input type="radio" name="payment_method" value="online" onclick="togglePayment()"> Online Payment</label>
    </div>

    <div class="online-options" id="onlineOptions">
      <label><input type="radio" name="onlineMethod" value="upi"> UPI</label><br>
      <label><input type="radio" name="onlineMethod" value="card"> Credit/Debit Card</label><br>
      <label><input type="radio" name="onlineMethod" value="netbanking"> Net Banking</label>
    </div>

    <button type="submit">Place Rental Order</button>
  </form>
</div>

<script>
  const baseRentPerDay = '<%=locals.amount %>';
  const urgentDeliveryFee = 199;

  // Simulated registered user data
  const registeredUser = {
    name: "<%= locals.userdetail.name%>",
    phone: "<%= locals.userdetail.phone%>",
    address: "<%=locals.userdetail.address%>",
    
  };

  window.onload = () => {
    document.getElementById('name').value = registeredUser.name;
    document.getElementById('phone').value = registeredUser.phone;
    document.getElementById('address').value = registeredUser.address;
    
  };

  function validateDates() {
    const delivery = document.getElementById('deliveryDate').value;
    const returnDate = document.getElementById('returnDate').value;

    if (!delivery || !returnDate) return;

    const deliveryDateObj = new Date(delivery);
    const returnDateObj = new Date(returnDate);
    const today = new Date();
    today.setHours(0, 0, 0, 0);

    if (deliveryDateObj < today) {
      alert("Delivery date cannot be in the past.");
      document.getElementById('deliveryDate').value = today.toISOString().split('T')[0];
      return;
    }

    if (returnDateObj <= deliveryDateObj) {
      alert("Return date must be at least one day after delivery date.");
      const nextDay = new Date(deliveryDateObj);
      nextDay.setDate(nextDay.getDate() + 1);
      document.getElementById('returnDate').value = nextDay.toISOString().split('T')[0];
      return;
    }

    const diffTime = returnDateObj - deliveryDateObj;
    const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
    document.getElementById('days').value = diffDays;
    calculateAmount();
  }

  function calculateAmount() {
    const days = parseInt(document.getElementById('days').value) || 1;
    const urgent = document.getElementById('urgent').checked;

    let totalAmount = baseRentPerDay * days;
    if (urgent) totalAmount += urgentDeliveryFee;

    document.getElementById('amount').textContent = totalAmount;
  }

  function togglePayment() {
    const selected = document.querySelector('input[name="payment"]:checked').value;
    document.getElementById('onlineOptions').style.display = (selected === 'online') ? 'block' : 'none';
  }
</script>



</body>
</html>
