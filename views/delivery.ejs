<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Manage Delivery Dates</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .horizontal-card img {
      width: 120px;
      height: auto;
      object-fit: cover;
    }
    .horizontal-card {
      min-height: 120px;
    }
    .card-actions {
      display: flex;
      flex-direction: column;
      gap: 5px;
    }
  </style>
</head>
<body>

<div class="container py-5">
  <h2 class="mb-4 border-bottom pb-2">Manage Delivery Dates</h2>

  <!-- Date-Only Search Bar -->
  <form class="row mb-4"  action="/delivery" method="GET">
    <div class="col-md-4">
     <% if(locals.searchdate){ %>
      <input type="date" class="form-control" value="<%= searchdate %>" name="searchDate" required>
    <%  }else{  %>
     <input type="date" class="form-control" name="searchDate" required>
    <%  } %>
    </div>
    <div class="col-md-2">
      <button type="submit" class="btn btn-primary">Search</button>
    </div>
  </form>

  <!-- Horizontal Cards -->
  <div class="row g-3">
    <% if(result && result.length > 0 ) { %> 
      <% result.forEach(dress => { %>    
        <div class="col-12">
          <div class="card horizontal-card d-flex flex-row align-items-center shadow-sm p-2">
            <img src="/uploads/<%= dress.main_image %>" class="img-fluid rounded-start me-3" alt="Dress Image">
            <div class="flex-grow-1">
              <h6 class="mb-1"><%= dress.title %></h6>
              <p class="mb-1"><strong>Delivery:</strong> <%= dress.d_date %></p>
              <p class="mb-1"><strong>Return:</strong> <%= dress.r_date %></p>
            </div>
            <div class="card-actions">
              <form action="/delivery_email_sent" method="POST">
                <input type="hidden" name="userid" value="<%= dress.user_id %>">     
                <input type="hidden" name="rentalid" value="<%= dress.rentalid %>"> 
                <input type="hidden" name="dressid" value="<%= dress.dress_id %>">
                <% if(dress.delivery_email_sent==false) { %>                
                <button type="submit" class="btn btn-outline-primary btn-sm">Message Courier</button>
                 <% }else{ %>
               <button  class="btn btn-outline-primary btn-sm">Message sent Courier</button>
                <% } %> 
              </form> 

            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <p>No results found...</p>
    <% } %>  
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

