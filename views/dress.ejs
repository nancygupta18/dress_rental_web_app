<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Dress Details</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css"/>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: Arial, sans-serif;
    }
  </style>
</head>
<body class="bg-gray-50">
  <%- include("header.ejs") %>

  <div class="max-w-7xl mx-auto p-6 mt-24">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
           <% if (locals.detail) { %>
          <!-- Swiper Slider -->
          <div class="swiper mySwiper rounded-xl shadow-md">
            <div class="swiper-wrapper">
              <div class="swiper-slide">
                <div class="aspect-w-3 aspect-h-4">
                  <img id="main-image" src="/uploads/<%= detail.main_image %>" alt="Dress" class="rounded-xl shadow-md object-cover w-full">
                </div>
              </div>
            </div>
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
            <div class="swiper-pagination"></div>
          </div>

          <!-- Thumbnails -->
          <div id="thumbnails" class="flex gap-2 mt-4">
            <% [detail.image1, detail.image2, detail.image3, detail.image4, detail.image5].forEach(image => {
              if (image) { %>
                <img src="/uploads/<%= image %>" class="w-24 h-32 object-cover rounded-md cursor-pointer" onclick="swapImage(this)"/>
            <% } }); %>
          </div>
        </div>

        <div class="flex flex-col gap-4">
          <h1 class="text-3xl font-semibold"><%= detail.title %></h1>
          <p class="text-xl text-red-600 font-bold">₹<%= detail.price_per_day %> / day</p>
          <p class="text-sm text-gray-500">Late fee: ₹<%= detail.late_fee_per_day %>/day</p>

          <div>
            <label class="block mb-1 font-medium">Select Size</label>
            <select class="w-full border rounded-lg px-4 py-2">
              <option>XS</option>
              <option>S</option>
              <option>M</option>
              <option>L</option>
              <option>XL</option>
            </select>
          </div>

          <div class="flex gap-4">
            <% if (locals.update) { %>
              
            <% } else { %>
              <a href="/rent/<%= detail.id %>"><button class="btn">Rent Now</button></a>
            <% } %>
          </div>

          <div>
            <h2 class="text-lg font-semibold mt-4">Description</h2>
            <p class="text-gray-700 mt-1"><%= detail.d_description %></p>
            <ul class="list-disc list-inside mt-2 text-gray-600">
              <li>Material: <%= detail.material %></li>
              <li>Color: <%= detail.color %></li>
              <li>Occasion: <%= detail.type %></li>
            </ul>
          </div>

          <div>
            <h2 class="text-lg font-semibold mt-4">Delivery Information</h2>
            <ul class="list-disc list-inside mt-2 text-gray-600">
              <li>Standard Delivery: 2–3 business days</li>
              <li>Express Delivery: Within 24 hours (extra ₹199)</li>
              <li>Free return pickup included</li>
              <li>Delivery available across major cities</li>
            </ul>
          </div>
        </div>
         <% if(locals.update){ %>
          <% } else { %>
             <a href="/feedback<%= detail.id %>"><button class="btn mt-4">Rate dress</button></a>
              <div class="mt-10">
             <h2 class="text-2xl font-bold mb-4">Customer Reviews</h2>

            <% }%>
         
      <% } %>
    </div>

  
    <div class="space-y-4">
    <% if (locals.feedback && feedback.length > 0) { %>
      <% feedback.forEach(feed=> { %>
        <div class="bg-white p-4 rounded-lg shadow">
          <div class="flex justify-between items-center">
            <p class="font-semibold"><%= feed.name %></p>
            <p class="text-yellow-500">★★★★☆</p> 
          </div>
          <p class="text-gray-700 mt-1"><%= feed.comment %></p>
          <p class="text-xs text-gray-400"><%= feed.year || '2025' %></p>
        </div>
      <% }); %>
    <% } else { %>
      <p class="text-gray-500">No reviews yet.</p>
    <% } %>
    </div>
   </div>
  </div>

 

    


  <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
  <script>
    const swiper = new Swiper(".mySwiper", {
      loop: true,
      spaceBetween: 10,
      pagination: {
        el: ".swiper-pagination",
        clickable: true,
      },
      navigation: {
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev",
      },
    });

    function swapImage(clickedImg) {
      const mainImg = document.getElementById("main-image");
      const tempSrc = mainImg.src;
      mainImg.src = clickedImg.src;
      clickedImg.src = tempSrc;
    }
  </script>
</body>
</html>