.navbar {
  position: fixed;       /* Fixes the navbar */
  top: 0;                /* Positions it at the top */
  left: 0;
  width: 100%;           /* Full width */
  height: 80px;          /* Or your desired height */
  background-color: white;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  z-index: 999;          /* Ensures it stays above other content */
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20px;
  
}

.nav-links {
    list-style: none;
    display: flex;
    font-family: "Cinzel Decorative", serif !important;
      font-weight: 500;
      font-style: normal;
      color: #4d1f00 !important;
}

.nav-links li {
    margin: 0 15px;
    position: relative;
}

.nav-links a {
    text-decoration: none;
    color: #4d1f00;
    font-weight: bold;
    cursor: pointer;
}

.nav-links li:hover .dropdown-content {
    display: block;
}

.dropdown-content {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    background-color: white;
    box-shadow: 0 2px 5px (0, 0, 0, 0.1);
    padding: 10px;
    border-radius: 5px;
    width: 150px;
}

.dropdown-content a {
    display: block;
    padding: 5px 0;
    color: #4d1f00;
    text-decoration: none;
}

.dropdown-content a:hover {
    color: rgb(231, 139, 72);
}

.search-bar input {
    padding: 8px;
    width: 500px;
    border: 1px solid #ccc;
    border-radius: 4px;
}

.btn {
    padding: 10px 15px;
    border: none;
    border-radius: 5px;
    background-color:  #b17f59;
    color: white;
    font-size: 16px;
    cursor: pointer;
    transition: background-color 0.3s, transform 0.2s;
}

.btn:hover {
    background-color: rgb(177, 127, 89);
    transform: scale(1.05);
}
.profile {
    position: relative;
    cursor: pointer;
}

.profile-dropdown {
    display: none;
    position: absolute;
    right: 0;
    top: 100%;
    background: white;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    padding: 10px;
    width: 200px;
    border-radius: 5px;
}

.profile:hover .profile-dropdown {
    display: block;
}

.profile-dropdown button {
    display: block;
    width: 100%;
    padding: 10px;
    margin: 5px 0;
    background-color: rgb(191, 146, 100);
    border: none;
    color: white;
    cursor: pointer;
    border-radius: 5px;
    transition: background-color 0.3s, transform 0.2s;
}

.profile-dropdown button:hover {
    background-color: #4d1f00;
    transform: scale(1.05);
}

.icons {
    display: flex;
    align-items: center;
    gap: 10px; /* Adds spacing between buttons */
}

.icons form {
    display: flex;
}


 </style>
</head>
<body>
    <nav class="navbar" style="margin-bottom: 90px;">
        <div><a href="/"><img class="logo" style="margin-left: 10px;" src="/dress-rental.svg" alt="Dress Rental Logo" ></a></div>
        <ul  class="nav-links">
          <li><a>Men</a>
            <div class="dropdown-content">
              <a href="/category?gender=men&type=party">Party Wear</a>
              <a href="/category?gender=men&type=wedding">Wedding Wear</a>
            </div>
          </li>
          <li><a>Women</a>
            <div class="dropdown-content">
              
              <a href="/category?gender=women&type=party">Party Wear</a>
              <a href="/category?gender=women&type=wedding">Wedding Wear</a>
              
            </div>
          </li>
          
        </ul>
    
        <% if(locals.userid){ %>
        <input type="hidden" value="<%= userid %>" name="userid" id="userid">
        <% } %>
    
        <form action="/search" method="POST">
          <div class="search-bar" id="searchBtn">
            <% if(locals.search){ %>
            <input type="text" placeholder="Search for products, brands, and more" value="<%= search %>" name="search" id="searchInput">
            <% } else { %>
            <input type="text" placeholder="Search for products, brands, and more" name="search" id="searchInput">
            <% } %>
          </div>
        </form>
    
        <% if(!locals.username){ %>
        <div class="icons">
          <form action="/login" method="GET">
            <button class="btn">Login</button>
          </form>
          <form action="/submit" method="GET">
            <button class="btn">Sign In</button>
          </form>
        </div>
        <% } %>
    
        <div class="profile">
          <% if(locals.username) { %>
          <button class="btn">Profile</button>
          <div class="profile-dropdown" id="profileDropdown">
            <button>Welcome, <%= username %></button>
            <a href="/order-history "  style="text-decoration: none;"><button>Orders</button></a>
           <!-- <button>Cart</button> -->
            <form action="/logout" method="GET">
              <button>Logout</button>
            </form>
          </div>
          <% } else { %>
          <button class="btn">Profile</button>
          <div class="profile-dropdown" id="profileDropdown">
            <button>Welcome, username</button>
            <a href="/order-history "  style="text-decoration: none;"><button>Orders</button></a>
          <!--  <button>Cart</button> -->
            <form action="/logout" method="GET">
              <button>Logout</button>
            </form>
          </div>
          <% } %>
        </div>
      </nav>
